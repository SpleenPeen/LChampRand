<Window x:Class="LeagueChamps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueChamps"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="League Champ Randomiser" Height="450" Width="950" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF1D1D1D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Name="stackPan" Background="#FF252525">
            <Button Height="40" Name="rollBut" FontSize="18" Content="Roll" Click="rollBut_Click"/>
            <Button Height="40" Name="addBut" FontSize="18" Content="Add" Click="addBut_Click"/>
            <Button Height="40" Name="editBut" FontSize="18" Content="Edit" Click="editBut_Click" Background="#FF373737"/>
        </StackPanel>
        <ContentControl x:Name="CC" Grid.Column="1"/>
    </Grid>
</Window>
